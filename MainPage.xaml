            <slider:SfRangeSlider x:Name="TrimSlider" HorizontalOptions ="FillAndExpand"
                                      Margin="0,0" 
	                                  Minimum="1"
                                      Maximum="10"
                                      RangeStart="3"
                                      RangeEnd="7"
                                      ShowTicks="False"
                                      ShowDividers="False"
                                      StepSize="1"
                                      Interval="1"
                                      ValueChanged="OnTrimSliderValueChanged"
                                      ValueChangeEnd="OnTrimSliderValueChanged">
                                       
            </slider:SfRangeSlider>
